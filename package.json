{
  "author": "tony_quetano@planttheidea.com",
  "ava": {
    "babel": "inherit",
    "failFast": true,
    "files": ["test/*.js"],
    "require": ["babel-register", "test/helpers/setup-enzyme.js"],
    "source": ["src/*.js"],
    "verbose": true
  },
  "browserslist": ["defaults", "Explorer >= 9", "Safari >= 6", "Opera >= 15", "iOS >= 8", "Android >= 4"],
  "bugs": {
    "url": "https://github.com/planttheidea/remodeled/issues"
  },
  "dependencies": {
    "prop-types": "^15.6.1"
  },
  "description": "An abstraction for the React API with functional purity",
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.0",
    "eslint-config-rapid7": "^2.11.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^2.0.0",
    "html-webpack-plugin": "^3.0.7",
    "in-publish": "^2.0.0",
    "nyc": "^11.6.0",
    "optimize-js-plugin": "^0.0.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.0.0",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0",
    "sinon": "^4.4.6",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1"
  },
  "keywords": ["functional", "react"],
  "license": "MIT",
  "homepage": "https://github.com/planttheidea/remodeled#readme",
  "main": "lib/index.js",
  "module": "es/index.js",
  "name": "remodeled",
  "peerDependencies": {
    "react": "^15.3.0 || ^16.0.0",
    "react-dom": "^15.3.0 || ^16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/planttheidea/remodeled.git"
  },
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "clean": "npm run clean:lib && npm run clean:es && npm run clean:dist",
    "clean:dist": "rimraf dist",
    "clean:lib": "rimraf lib",
    "clean:es": "rimraf es",
    "dev": "NODE_ENV=development webpack-dev-server --colors --progress --config=webpack/webpack.config.dev.js",
    "dist": "npm run clean:dist && npm run build",
    "lint": "NODE_ENV=test eslint src",
    "lint:fix": "NODE_ENV=test eslint src --fix",
    "prepublish": "if in-publish; then npm run prepublish:compile; fi",
    "prepublish:compile":
      "npm run lint && npm run test:coverage && npm run transpile:lib && npm run transpile:es && npm run dist",
    "start": "npm run dev",
    "test": "NODE_PATH=. NODE_ENV=production BABEL_ENV=test ava",
    "test:coverage": "nyc npm test",
    "test:watch": "npm test -- --watch",
    "transpile:lib": "npm run clean:lib && BABEL_ENV=lib babel src --out-dir lib",
    "transpile:es": "npm run clean:es && BABEL_ENV=es babel src --out-dir es"
  },
  "version": "1.0.0"
}
